<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
	       http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		   http://www.springframework.org/schema/context
		   http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 通过构造函数实例化bean -->
    <!-- 默认的无参构造函数 -->
    <bean id="malePerson1" class="me.yangjun.modules.frame.spring.demo.ioc.MalePerson"/>
    <!-- 有参构造函数 -->
    <bean id="malePerson2" class="me.yangjun.modules.frame.spring.demo.ioc.MalePerson">
        <constructor-arg index="0" value="18"></constructor-arg>
    </bean>

    <!-- 通过工厂实例化bean -->
    <!-- 静态工厂 -->
    <bean id="malePerson3" class="me.yangjun.modules.frame.spring.demo.ioc.MalePersonFactory"
          factory-method="newInstance">
        <constructor-arg index="0" value="18"></constructor-arg>
    </bean>
    <!-- 实例工厂 -->
    <bean id="malePerson4" class="me.yangjun.modules.frame.spring.demo.ioc.MalePersonFactory2"
          factory-method="newInstance">
        <constructor-arg index="0" value="18"></constructor-arg>
    </bean>

</beans>

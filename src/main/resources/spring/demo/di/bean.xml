<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	       http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		   http://www.springframework.org/schema/context
		   http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 通过构造函数注入 -->
	<!-- 通过参数索引 -->
	<bean id="diMalePersonByIndex1"
		class="me.yangjun.modules.frame.spring.demo.di.MalePerson">
		<constructor-arg index="0" value="程序员"></constructor-arg>
		<constructor-arg index="1" value="3"></constructor-arg>
	</bean>
	<!-- 通过参数类型 -->
	<bean id="diMalePersonByType1"
		class="me.yangjun.modules.frame.spring.demo.di.MalePerson">
		<constructor-arg type="java.lang.String" value="程序员"></constructor-arg>
		<constructor-arg type="int" value="3"></constructor-arg>
	</bean>
	<bean id="diMalePersonByType2"
		class="me.yangjun.modules.frame.spring.demo.di.MalePerson">
		<constructor-arg type="java.lang.String" value="程序员"></constructor-arg>
		<constructor-arg type="int" value="3"></constructor-arg>
		<constructor-arg type="java.lang.String" value="广东深圳"></constructor-arg>
	</bean>
	<!-- 通过参数名 -->
	<bean id="diMalePersonByName1"
		class="me.yangjun.modules.frame.spring.demo.di.MalePerson">
		<constructor-arg name="work" value="程序员"></constructor-arg>
		<constructor-arg name="workYear" value="3"></constructor-arg>
		<constructor-arg name="workPlace" value="广东深圳"></constructor-arg>
	</bean>

	<!-- 静态工厂 -->
	<bean id="diMalePersonFactoryByIndex1"
		class="me.yangjun.modules.frame.spring.demo.di.MalePersonFactory"
		factory-method="newInstance">
		<constructor-arg index="0" value="程序员"></constructor-arg>
		<constructor-arg index="1" value="3"></constructor-arg>
		<constructor-arg index="2" value="广东深圳"></constructor-arg>
	</bean><!-- 通过参数类型和通过参数名跟上面的是差不多的 -->

	<!-- 实例工厂 -->
	<bean id="diMalePersonFactory2Bean"
		class="me.yangjun.modules.frame.spring.demo.di.MalePersonFactory2"></bean>
	<bean id="diMalePersonFactory2ByIndex1"
		factory-bean="diMalePersonFactory2Bean" factory-method="newInstance">
		<constructor-arg index="0" value="程序员"></constructor-arg>
		<constructor-arg index="1" value="3"></constructor-arg>
		<constructor-arg index="2" value="广东深圳"></constructor-arg>
	</bean><!-- 通过参数类型和通过参数名跟上面的是差不多的 -->
</beans>

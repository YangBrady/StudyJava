<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- 通过构造函数实例化bean -->
    <!-- 默认的无参构造函数 -->
    <bean id="malePerson1" class="me.yangjun.study.ioc.MalePerson"/>
    <!-- 有参构造函数 -->
    <bean id="malePerson2" class="me.yangjun.study.ioc.MalePerson">
        <constructor-arg index="0" value="18"/>
    </bean>

    <!-- 通过工厂实例化bean -->
    <!-- 静态工厂 -->
    <bean id="malePerson3" class="me.yangjun.study.ioc.MalePersonFactory"
          factory-method="newInstance">
        <constructor-arg index="0" value="18"/>
    </bean>

    <!-- 实例工厂 -->
    <bean id="malePersonFactory2" class="me.yangjun.study.ioc.MalePersonFactory2"/>
    <bean id="malePerson4" factory-bean="malePersonFactory2" factory-method="newInstance">
        <constructor-arg index="0" value="18"/>
    </bean>

</beans>
